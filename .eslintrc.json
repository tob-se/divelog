{
  "extends": "next/core-web-vitals",
  "rules": {
    "import/no-cycle": 1,
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "app",
            "from": "infrastructure/drizzle",
            "message": "Importing any files from drizzle inside app is disallowed."
          },
          {
            "target": "app",
            "from": "tests",
            "message": "Importing any files from tests inside app is disallowed."
          }
        ]
      }
    ]
  }
}
